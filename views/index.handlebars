<div class="container">
  <h1 class="title">Eat Da Burger</h1>

  <div class="row">

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Burgers to eat!</div>
        <div class="panel-body">
          <ul>
            {{#each uneaten}}
            <li>{{burger_name}}
              <button type="button" data-id="{{id}}" class="devour" class="btn btn-warning">Devour!</button>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <img class="image" src="/assets/images/burger.png" />
      <form method="POST" action="/create">
        <div class="form-group">
          <label for="burger">Input a burger you want to eat!</label>
          <input type="text" class="form-control" id="burgerInput">
          <button type="submit" class="btn btn-default submit">Submit</button>
        </div>
      </form>
    </div>


    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Burgers already eaten!</div>
        <div class="panel-body">
          <ul>
            {{#each eaten}}
            <li>{{burger_name}}
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

  </div>
</div>